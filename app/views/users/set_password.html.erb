<div class="page-content">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="well">
          <h3>Set Password &amp; Phone</h3>
          <hr>
          <%= form_tag save_password_path do %>
            <div class="form-group">
              <%= text_field_tag :phone_number, class: 'form-control', placeholder: 'Phone Number' %>
            </div>
            <div class="form-group">
              <%= password_field_tag :password, class: 'form-control', placeholder: 'password' %>
            </div>
            <div class="form-group">
              <%= password_field_tag :password_confirmation, class: 'form-control', placeholder: 'Confirm Password' %>
            </div>
            <div class="form-group">
              <%= submit_tag :complete, class: 'btn btn-primary' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
