<div class="container-fluid">
  <div id="ride" class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <div class="well">
        <h3 class="text-center">Ride with Comet Cabs.</h3>
        <br>
        <div class="row">
          <div class="col-sm-8 col-sm-offset-2">
            <%= form_tag request_booking_path, method: :post do %>
              <div class="form-group">
                <%= text_field_tag :source, nil, class: 'form-control', placeholder: 'Source', autofocus: true %>
                <%= hidden_field_tag :source_place_id, nil %>
              </div>
              <div class="form-group">
                <%= text_field_tag :destination, nil, class: 'form-control', placeholder: 'Destination', autofocus: true %>
                <%= hidden_field_tag :destination_place_id, nil %>
              </div>
              <hr>
              <div class="form-group">
                <h5><b>Ride Type</b></h5>
                <% @cab_types.each_with_index do |cab_type, index| %>
                  <label class="radio-inline">
                    <input type="radio" name="cab_type" value="<%= cab_type.id %>" <%= "checked" if index == 0 %>>
                    <%= cab_type.name %>
                  </label>
                <% end %>
              </div>
              <hr>
              <%= submit_tag 'Request Cab', class: 'btn btn-success btn-block' %>
              <%= submit_tag 'Get Fare Estimate', class: 'btn btn-default btn-block' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
